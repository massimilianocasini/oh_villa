rule "Termostato OFF Biliardo"
    when
        Item ProxyAttTermo9 changed from ON to OFF
    then 
        sendCommand(OFFTht1, 1)
    end

rule "Termostato ON Biliardo"
    when
        Item ProxyAttTermo9 changed from OFF to ON
    then
        sendCommand(ONTht1, 1)
    end


rule "Termostato OFF App.verde"
    when
        Item ProxyAttTermo9 changed from ON to OFF
    then 
        sendCommand(OFFTht9, 1)
    end

rule "Termostato ON App.verde"
    when
        Item ProxyAttTermo9 changed from OFF to ON
    then
        sendCommand(ONTht9, 1)
    end

