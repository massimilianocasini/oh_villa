rule "Tutto su una riga 1"
        when
              Item Termoumidostato1T changed or
              Item StatoRele1 changed or
              Item FeedBRele1 changed or
              Time cron "0 0/1 * 1/1 * ? *" //ogni 1 minuti
        then
               val temperatura = Termoumidostato1T.state
               val statorele = StatoRele1.state
               val statotermostato = FeedBRele1.state
               val statosetpoint = Termoumidostato1S.state
               Riepilogo1.postUpdate("T:" + temperatura + "°C -" + " Set:" + statosetpoint + " - " + "Trm:" + statotermostato + " - " + "Relè:" + statorele)
end

